<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:id="@+id/background"
        android:height="@dimen/scroll_indicator_size_wide"
        android:width="@dimen/scroll_indicator_size_narrow"
        android:gravity="left|center_vertical" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/switch_access_menu_background" />
            <corners
                android:bottomRightRadius="@dimen/scroll_indicator_corner_radius"
                android:topRightRadius="@dimen/scroll_indicator_corner_radius"/>
      </shape>
    </item>
    <item
        android:drawable="@drawable/ic_scroll_left_white"
        android:gravity="left|center_vertical"
        android:width="@dimen/scroll_indicator_icon_size"
        android:height="@dimen/scroll_indicator_icon_size" />
</layer-list>
